@model ITP245_Model.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Inventory/Views/Shared/_Inventory.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            Items in @Model.Name Category:
        </div>
    </div>
        @foreach (var item in Model.Items)
            {
                <div class="row">
                    <div class="col-lg-12">
                       @Html.ActionLink(item.Name, "Details", "Items", new {id = item.ItemId}, new { @class = "badge bg-info" }) 
                    </div>
                </div>
            }
</div>
<br />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
