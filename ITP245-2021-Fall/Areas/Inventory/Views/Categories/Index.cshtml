@model IEnumerable<ITP245_Model.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Areas/Inventory/Views/Shared/_Inventory.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Create New Category &raquo;"), "Create", null, null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoryId }, new { @class = "badge rounded-pill bg-success" }) 
            @Html.ActionLink("Details", "Details", new { id=item.CategoryId }, new { @class = "badge rounded-pill bg-warning" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryId }, new { @class = "badge rounded-pill bg-danger" })
        </td>
    </tr>
}

</table>
