@model IEnumerable<ITP245_Model.PurchaseOrder>

@{
    ViewBag.Title = "Purchase Orders";
    Layout = "~/Areas/Inventory/Views/Shared/_Inventory.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Create New Purchase Order &raquo;"), "Create", null, null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseOrderNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PoDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PurchaseOrderNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateDay)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Val)
    </td>
    <td>
        @Html.ActionLink(item.Vendor.Name.ToString(), "Details", "Vendors", new { id = item.VendorId }, new { @class = "badge bg-info" })
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.PurchaseOrderNumber }, new { @class = "badge rounded-pill bg-success" }) 
        @Html.ActionLink("Details", "Details", new { id = item.PurchaseOrderNumber }, new { @class = "badge rounded-pill bg-warning" }) 
        @Html.ActionLink("Delete", "Delete", new { id = item.PurchaseOrderNumber }, new { @class = "badge rounded-pill bg-danger" })
    </td>
</tr>
}

</table>
