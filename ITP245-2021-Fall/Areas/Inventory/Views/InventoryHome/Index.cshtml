
@{
    ViewBag.Title = "Inventory";
    Layout = "~/Areas/Inventory/Views/Shared/_Inventory.cshtml";
}

<div class="container inventory_home">
    <h2>Inventory Home</h2>
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-info">Items</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Items &raquo;"), "Index", "Items", null, new { @class = "btn btn-info" })
        </div>
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Categories &raquo;"), "Index", "Categories", null, new { @class = "btn btn-info" })
        </div>
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Spoilages &raquo;"), "Index", "Spoilages", null, new { @class = "btn btn btn-info" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-primary">Purchase Orders</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Purchase Orders &raquo;"), "Index", "PurchaseOrders", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-danger">Vendors</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Vendors &raquo;"), "Index", "Vendors", null, new { @class = "btn btn-danger" })
        </div>
    </div>

</div>