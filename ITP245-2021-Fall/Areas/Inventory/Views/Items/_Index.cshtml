@model IEnumerable<ITP245_Model.Item>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.QuantityOnHand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RetailPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StandardCost)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.QuantityOnHand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ItemId }, new { @class = "badge rounded-pill bg-success" }) 
                @Html.ActionLink("Details", "Details", new { id = item.ItemId }, new { @class = "badge rounded-pill bg-warning" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.ItemId }, new { @class = "badge rounded-pill bg-danger" })
            </td>
        </tr>
    }

</table>
