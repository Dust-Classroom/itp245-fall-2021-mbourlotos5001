
@{
    ViewBag.Title = "School";
    Layout = "~/Areas/School/Views/Shared/_School.cshtml";
}

<h2>@ViewBag.Title</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-info">Facilities</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Campuses &raquo;"), "Index", "Campus", null, new { @class = "btn btn-outline-info" })
        </div>
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Buildings &raquo;"), "Index", "Buildings", null, new { @class = "btn btn-outline-info" })
        </div>
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Classrooms &raquo;"), "Index", "Classrooms", null, new { @class = "btn btn btn-outline-info" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-primary">Schedule</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Courses &raquo;"), "Index", "Courses", null, new { @class = "btn btn-outline-primary" })
        </div>
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Scheduling &raquo;"), "Index", "Sections", null, new { @class = "btn btn-outline-primary" })
        </div>
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Students &raquo;"), "Index", "Students", null, new { @class = "btn btn-outline-primary" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-danger">Administration</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Semesters &raquo;"), "Index", "Semesters", null, new { @class = "btn btn-outline-danger" })
        </div>
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Departments &raquo;"), "Index", "Departments", null, new { @class = "btn btn-outline-danger" })
        </div>
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Instructors &raquo;"), "Index", "Instructors", null, new { @class = "btn btn-outline-danger" })
        </div>
    </div>
  
</div>

